{
  "name": "@miraplex/beet-miraland",
  "version": "0.4.0",
  "description": "Miraland specific extension for beet, the borsh compatible de/serializer",
  "sideEffects": false,
  "main": "dist/cjs/src/beet-miraland.js",
  "types": "dist/types/src/beet-miraland.d.ts",
  "scripts": {
    "check:publish-ready": "yarn build && yarn test",
    "preversion": "yarn check:publish-ready",
    "postversion": "git add package.json && git commit -m \"chore: update $npm_package_name to v$npm_package_version\" && git tag $npm_package_name@$npm_package_version",
    "prepublishOnly": "yarn check:publish-ready",
    "postpublish": "git push origin && git push origin --tags",
    "build": "rimraf dist && tsc -p tsconfig.json --declaration",
    "pretest": "yarn build",
    "test": "tape dist/cjs/test/*.js",
    "lint": "prettier -c ./src/",
    "lint:fix": "prettier --write ./src",
    "doc": "rimraf ../docs/beet-miraland && typedoc"
  },
  "repository": "git@github.com:miraland-labs/beet-miraland.git",
  "author": "Thorsten Lorenz <thlorenz@gmx.de>",
  "license": "Apache-2.0",
  "directories": {
    "dist": "./dist/src"
  },
  "files": [
    "dist/cjs/src/*",
    "dist/types/src/*"
  ],
  "dependencies": {
    "@miraplex/beet": ">=0.1.0",
    "@solarti/web3.js": "^1.73.2-rc4",
    "bs58": "^5.0.0",
    "debug": "^4.3.4"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/node": "^14.18.0",
    "@types/node-fetch": "^2.6.1",
    "@types/tape": "^4.13.2",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "spok": "^1.4.3",
    "tape": "^5.3.2",
    "typedoc": "^0.23.13",
    "typescript": "^4.8.2"
  }
}
